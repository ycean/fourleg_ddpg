<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="robot_core_name" default=""/>
  <arg name="device_name"                default="/dev/ttyUSB0"/>
  <arg name="baud_rate"           default="1000000"/>

  <arg name="leg_1_1"		default="1"/>
  <arg name="leg_1_2"		default="2"/>
  <arg name="leg_1_3"		default="3"/>
  <arg name="leg_2_1"		default="4"/>
  <arg name="leg_2_2"		default="5"/>
  <arg name="leg_2_3"		default="6"/>
  <arg name="leg_3_1"		default="7"/>
  <arg name="leg_3_2"		default="8"/>
  <arg name="leg_3_3"		default="9"/>
  <arg name="leg_4_1"		default="10"/>
  <arg name="leg_4_2"		default="11"/>
  <arg name="leg_4_3"		default="12"/>

  <arg name="scan_range"                 default="200"/>


  <arg name="profile_velocity"           default="200"/>
  <arg name="profile_acceleration"       default="50"/>

  <param name="device_name"              value="$(arg device_name)"/>
  <param name="baud_rate"                value="$(arg baud_rate)"/>

  <param name="scan_range"               value="$(arg scan_range)"/>

  <param name="profile_velocity"         value="$(arg profile_velocity)"/>
  <param name="profile_acceleration"     value="$(arg profile_acceleration)"/>

  <node name="$(arg robot_core_name)" pkg="dynamixel_workbench_controllers" type="position_control" required="true" output="screen" args="$(arg device_name) $(arg baud_rate)"/>

</launch>
